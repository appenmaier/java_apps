<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="led.Controller">
	<children>
      <Group>
         <children>
            <Circle fx:id="layer1" radius="25.0" />
            <Circle fx:id="layer2" radius="50.0" />
            <Circle fx:id="layer3" radius="75.0" />
            <Circle fx:id="layer4" radius="100.0" />
         </children>
      </Group>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button onAction="#switchOn" text="Einschalten" />
            <Button onAction="#switchOff" text="Ausschalten" />
            <Button onAction="#switchColor" text="Farbe wechseln" />
         </children>
      </HBox>
	</children>
	<padding>
		<Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
	</padding>
</VBox>
